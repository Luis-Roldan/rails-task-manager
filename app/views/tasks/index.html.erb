<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.title%>
      <%= link_to "more info", task_path(task)  %>
      <%= link_to "edit", edit_task_path(task)  %>
      <%= button_to "Delete", task_path(task), method: :delete, confirm: "Are you sure?" %>
      <%# <%= link_to "Delete", task_path(task), data:{method: :delete, confirm: "are you sure?"} %>
    </li>
  <% end%>
</ul>
<%= link_to "new task", new_task_path(@task)  %>
